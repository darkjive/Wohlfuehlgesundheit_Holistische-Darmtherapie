---
// Digestion.astro - Verdauung und Stuhlgang
// Abschnitt für detaillierte Fragen zum Stuhlgang und zur Verdauung
import FormInput from '~/components/ui/FormInput.astro';
import FormTextarea from '~/components/ui/FormTextarea.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const jaManchmalOptions = [
  { value: 'nein', label: 'Nein' },
  { value: 'ja', label: 'Ja' },
  { value: 'manchmal', label: 'Manchmal' },
];
---

<!-- Fragen zum Stuhlgang -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Fragen zum Stuhlgang</h3>

  <div class="space-y-6">
    <FormInput
      id="stuhlgang_freq"
      name="stuhlgang_freq"
      label="Wie häufig hast Du Stuhlgang?"
    />

    <FormSelect
      id="stuhlgang_schmerzen"
      name="stuhlgang_schmerzen"
      label="Hast Du Schmerzen beim Stuhlgang?"
      options={jaManchmalOptions}
    />

    <FormTextarea
      id="stuhlgang_auffaelligkeiten"
      name="stuhlgang_auffaelligkeiten"
      label="Gab es Auffälligkeiten (Blut, Schleim usw.)?"
      rows={2}
    />

    <FormTextarea
      id="stuhlgang_konsistenz"
      name="stuhlgang_konsistenz"
      label="Welche Form und Konsistenz hat Dein Stuhl?"
      placeholder="z.B. fest, weich, hart, flüssig"
      rows={2}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="stuhlgang_geruch_saeuerlich"
        name="stuhlgang_geruch_saeuerlich"
        label="Riecht Dein Stuhl säuerlich?"
        options={jaManchmalOptions}
      />

      <FormSelect
        id="winde_geruch"
        name="winde_geruch"
        label="Riechen Deine Winde stark nach „verfaulten Eiern"?"
        options={jaManchmalOptions}
      />
    </div>
  </div>
</div>
