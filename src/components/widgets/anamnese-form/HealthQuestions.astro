---
// HealthQuestions.astro - Fragen zu Deiner gesundheitlichen Situation
// Abschnitt des Anamnesebogens für gesundheitliche Beschwerden und Probleme
import FormInput from '~/components/ui/FormInput.astro';
import FormTextarea from '~/components/ui/FormTextarea.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const blutdruckOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'bluthochdruck', label: 'Bluthochdruck' },
  { value: 'niedriger_blutdruck', label: 'Niedriger Blutdruck' },
];

const cholesterinOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'ja', label: 'Ja' },
  { value: 'unbekannt', label: 'Unbekannt' },
];

const diabetesOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'typ1', label: 'Ja, Typ 1' },
  { value: 'typ2', label: 'Ja, Typ 2' },
];

const kopfschmerzenOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'kopfschmerzen', label: 'Kopfschmerzen' },
  { value: 'migraene', label: 'Migräne' },
  { value: 'beides', label: 'Beides' },
];

const jaOderNeinOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'ja', label: 'Ja' },
  { value: 'nein', label: 'Nein' },
];

const stuhluntersuchungVerfuegbarOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'ja', label: 'Ja' },
  { value: 'nein', label: 'Nein' },
  { value: 'nicht_zutreffend', label: 'Nicht zutreffend' },
];

const infektanfaelligOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'manchmal', label: 'Manchmal' },
  { value: 'haeufig', label: 'Häufig' },
  { value: 'sehr_haeufig', label: 'Sehr häufig' },
];

const schlafstoerungOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'einschlafstoerungen', label: 'Einschlafstörungen' },
  { value: 'durchschlafstoerungen', label: 'Durchschlafstörungen' },
  { value: 'beides', label: 'Beides' },
];
---

<!-- Fragen zu Deiner gesundheitlichen Situation -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 flex items-center text-xl font-semibold text-gray-900">
    <svg class="text-primary-600 mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
      ></path>
    </svg>
    Fragen zu Deiner gesundheitlichen Situation
  </h3>

  <div class="space-y-6">
    <FormTextarea
      id="hauptbeschwerde"
      name="hauptbeschwerde"
      label="Was ist Deine Hauptbeschwerde?"
      rows={3}
      required
      placeholder="z.B. Verdauungsprobleme, Blähungen, chronische Müdigkeit..."
    />

    <FormTextarea
      id="gesundheitsprobleme"
      name="gesundheitsprobleme"
      label="Unter welchen weiteren gesundheitlichen Problemen leidest Du derzeit und seit wann bestehen diese?"
      rows={4}
    />

    <FormTextarea
      id="allergien"
      name="allergien"
      label="Hast Du Allergien?"
      rows={2}
    />

    <FormTextarea
      id="nahrungsmittelunvertraeglichkeiten"
      name="nahrungsmittelunvertraeglichkeiten"
      label="Bestehen Nahrungsmittelunverträglichkeiten?"
      rows={2}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="blutdruck"
        name="blutdruck"
        label="Leidest Du unter Bluthochdruck oder niedrigem Blutdruck?"
        options={blutdruckOptions}
      />

      <FormSelect
        id="cholesterin"
        name="cholesterin"
        label="Hast Du hohe Cholesterinwerte?"
        options={cholesterinOptions}
      />

      <FormSelect
        id="diabetes"
        name="diabetes"
        label="Leidest Du unter Diabetes mellitus?"
        options={diabetesOptions}
      />

      <FormInput
        id="hautprobleme"
        name="hautprobleme"
        label="Hast Du Hautprobleme? Wenn ja, welche?"
      />

      <FormSelect
        id="kopfschmerzen"
        name="kopfschmerzen"
        label="Hast Du regelmäßig Kopfschmerzen oder Migräne?"
        options={kopfschmerzenOptions}
      />

      <FormInput
        id="magenprobleme"
        name="magenprobleme"
        label="Hast Du Magenprobleme? Wenn ja, welche?"
      />
    </div>

    <FormTextarea
      id="darmprobleme"
      name="darmprobleme"
      label="Hast Du Darmprobleme? Wenn ja, welche? (z. B. Durchfall, Verstopfung, Völlegefühl, Blähungen, Sonstiges)"
      rows={3}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="taeglich_stuhlgang"
        name="taeglich_stuhlgang"
        label="Hast Du täglichen Stuhlgang?"
        options={jaOderNeinOptions}
      />

      <FormInput
        id="stuhlgang_haeufigkeit"
        name="stuhlgang_haeufigkeit"
        label="Wenn nein: Wie oft hast Du Stuhlgang?"
      />
    </div>

    <FormTextarea
      id="pilzinfektionen"
      name="pilzinfektionen"
      label="Sind Pilzinfektionen bekannt (Darmpilz, Genitalpilz, Nagelpilz, Hautpilz)?"
      rows={2}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormTextarea
        id="stuhluntersuchung"
        name="stuhluntersuchung"
        label="Wurde bei Dir schon einmal eine Stuhluntersuchung durchgeführt? Was war das Ergebnis?"
        rows={3}
      />

      <FormSelect
        id="stuhluntersuchung_verfuegbar"
        name="stuhluntersuchung_verfuegbar"
        label="Kannst Du mir das Ergebnis zur Verfügung stellen?"
        options={stuhluntersuchungVerfuegbarOptions}
      />
    </div>

    <FormTextarea
      id="darmspiegelung"
      name="darmspiegelung"
      label="Wurde bei Dir schon mal eine Darmspiegelung gemacht? Wenn ja, warum?"
      rows={2}
    />

    <FormTextarea
      id="rheuma_gicht"
      name="rheuma_gicht"
      label="Hast Du Erkrankungen wie Rheuma, Gicht, Arthrose oder Osteoporose?"
      rows={2}
    />

    <FormTextarea
      id="rueckenprobleme"
      name="rueckenprobleme"
      label="Hast Du akute oder chronische Rückenprobleme?"
      rows={2}
    />

    <FormTextarea
      id="schilddruese"
      name="schilddruese"
      label="Schilddrüsenunter- oder -überfunktion? Wenn ja, nimmst Du dafür Medikamente? Wenn ja, welche?"
      rows={3}
    />

    <FormSelect
      id="infektanfaellig"
      name="infektanfaellig"
      label="Bist Du häufig krank oder infektanfällig (z. B. Grippe, Schnupfen)?"
      options={infektanfaelligOptions}
    />

    <FormSelect
      id="schlafstoerungen"
      name="schlafstoerungen"
      label="Leidest Du unter Ein- oder Durchschlafstörungen?"
      options={schlafstoerungOptions}
    />

    <FormTextarea
      id="sonstige_beschwerden"
      name="sonstige_beschwerden"
      label="Gibt es sonstige Beschwerden, chronische Erkrankungen oder Autoimmunerkrankungen?"
      rows={3}
    />

    <FormTextarea
      id="hauptproblem"
      name="hauptproblem"
      label="Was ist Dein Hauptproblem?"
      rows={3}
    />
  </div>
</div>
