---
// PersonalInfo.astro - Persönliche Informationen
import FormInput from '~/components/ui/FormInput.astro';
import FormTextarea from '~/components/ui/FormTextarea.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const familienstandOptions = [
  { value: 'ledig', label: 'Ledig' },
  { value: 'verheiratet', label: 'Verheiratet' },
  { value: 'geschieden', label: 'Geschieden' },
  { value: 'verwitwet', label: 'Verwitwet' },
  { value: 'partnerschaft', label: 'In Partnerschaft' },
];
---

<!-- Persönliche Daten -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Persönliche Daten</h3>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <FormInput
      id="alter"
      name="alter"
      type="number"
      label="Alter"
    />

    <FormInput
      id="groesse"
      name="groesse"
      type="number"
      label="Größe (cm)"
    />

    <FormInput
      id="gewicht"
      name="gewicht"
      type="number"
      label="Gewicht (kg)"
    />

    <FormSelect
      id="familienstand"
      name="familienstand"
      label="Familienstand"
      options={familienstandOptions}
    />

    <FormInput
      id="kinder"
      name="kinder"
      label="Kinder im Haushalt"
    />

    <FormInput
      id="beruf"
      name="beruf"
      label="Beruf"
    />
  </div>

  <div class="mt-6 space-y-6">
    <FormInput
      id="aufmerksam_durch"
      name="aufmerksam_durch"
      label="Wie bist Du auf mich aufmerksam geworden?"
    />

    <FormTextarea
      id="erwartungen"
      name="erwartungen"
      label="Was erwartest Du von mir und meiner Arbeit?"
    />
  </div>
</div>
