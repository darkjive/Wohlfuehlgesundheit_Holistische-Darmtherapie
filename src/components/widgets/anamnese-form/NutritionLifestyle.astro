---
// NutritionLifestyle.astro - Ernährung und Lebensstil
// Abschnitt für Ernährungsweise, Mahlzeiten, Getränke und Lebensstil
import FormInput from '~/components/ui/FormInput.astro';
import FormTextarea from '~/components/ui/FormTextarea.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const ernaehrungsweiseOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'mischkost', label: 'Mischkost' },
  { value: 'vegetarisch', label: 'Vegetarisch' },
  { value: 'vegan', label: 'Vegan' },
  { value: 'rohkoestlich', label: 'Rohköstlich' },
  { value: 'sonstiges', label: 'Sonstiges' },
];

const mittagesseSelbstOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'ja', label: 'Ja' },
  { value: 'nein', label: 'Nein' },
  { value: 'manchmal', label: 'Manchmal' },
];

const jaOderNeinOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'ja', label: 'Ja' },
  { value: 'nein', label: 'Nein' },
];

const brotbelagOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'butter', label: 'Butter' },
  { value: 'margarine', label: 'Margarine' },
  { value: 'keines', label: 'Keines' },
  { value: 'sonstiges', label: 'Sonstiges' },
];

const muesliMilchOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'kuhmilch', label: 'Kuhmilch' },
  { value: 'pflanzenmilch', label: 'Pflanzenmilch' },
  { value: 'joghurt', label: 'Joghurt' },
  { value: 'keines', label: 'Keines' },
];

const salatWannOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'vor', label: 'Vor der Hauptmahlzeit' },
  { value: 'waehrend', label: 'Während der Hauptmahlzeit' },
  { value: 'keinen', label: 'Esse keinen Salat' },
];
---

<!-- Fragen zu Deiner Ernährungsweise -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Fragen zu Deiner Ernährungsweise</h3>

  <div class="space-y-6">
    <FormTextarea
      id="ernaehrung_umgestellt"
      name="ernaehrung_umgestellt"
      label="Hast Du Deine Ernährung bereits (teilweise) umgestellt?"
      rows={2}
    />

    <FormSelect
      id="ernaehrungsweise"
      name="ernaehrungsweise"
      label="Ernährst Du Dich vegetarisch, vegan oder rohköstlich?"
      options={ernaehrungsweiseOptions}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="mittagessen_selbst"
        name="mittagessen_selbst"
        label="Bereitest Du Dein Mittagessen selbst zu?"
        options={mittagesseSelbstOptions}
      />

      <FormInput
        id="mittagessen_wo"
        name="mittagessen_wo"
        label="Isst Du mittags in der Kantine, Gaststätte, im Imbiss oder woanders?"
      />
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
      <FormSelect
        id="mikrowelle"
        name="mikrowelle"
        label="Verwendest Du eine Mikrowelle?"
        options={jaOderNeinOptions}
      />

      <FormSelect
        id="suessstoff"
        name="suessstoff"
        label="Verwendest Du Süßstoff?"
        options={jaOderNeinOptions}
      />

      <FormSelect
        id="light_produkte"
        name="light_produkte"
        label="Greifst Du gerne zu Light-Produkten?"
        options={jaOderNeinOptions}
      />
    </div>
  </div>
</div>

<!-- Deine aktuelle Ernährungsweise - Frühstück -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Deine aktuelle Ernährungsweise - Frühstück</h3>

  <div class="space-y-6">
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormInput
        id="fruehstueck_uhrzeit"
        name="fruehstueck_uhrzeit"
        label="Um welche Uhrzeit frühstückst Du?"
        placeholder="z.B. 7:00 Uhr"
      />

      <FormInput
        id="fruehstueck_was"
        name="fruehstueck_was"
        label="Was frühstückst Du und in welcher Menge?"
      />
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="brotbelag"
        name="brotbelag"
        label="Bevorzugst Du Butter oder Margarine auf Deinem Brot?"
        options={brotbelagOptions}
      />

      <FormInput
        id="muesli_zusatz"
        name="muesli_zusatz"
        label="Isst Du Dein Müsli mit oder ohne Zucker, mit oder ohne Früchten?"
      />
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="muesli_milch"
        name="muesli_milch"
        label="Verwendest Du für Dein Müsli Kuhmilch, Pflanzenmilch oder Joghurt?"
        options={muesliMilchOptions}
      />

      <FormInput
        id="morgen_getraenke"
        name="morgen_getraenke"
        label="Trinkst Du morgens Bohnenkaffee, Getreidekaffee, Tee oder Säfte? Und in welcher Menge?"
      />
    </div>

    <FormInput
      id="snack_vormittag"
      name="snack_vormittag"
      label="Was isst Du zwischen dem Frühstück und dem Mittagessen?"
    />
  </div>
</div>

<!-- Deine aktuelle Ernährungsweise - Mittagessen -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Deine aktuelle Ernährungsweise - Mittagessen</h3>

  <div class="space-y-6">
    <FormInput
      id="mittag_uhrzeit"
      name="mittag_uhrzeit"
      label="Um welche Uhrzeit isst Du zu Mittag?"
      placeholder="z.B. 12:30 Uhr"
    />

    <div>
      <label class="mb-3 block text-sm font-medium text-gray-700"> Was isst Du mittags und wie oft pro Woche? </label>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <label for="mittag_kartoffeln" class="mb-1 block text-xs text-gray-600">Kartoffeln:</label>
          <FormInput
            id="mittag_kartoffeln"
            name="mittag_kartoffeln"
            placeholder="z.B. 2x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_reis" class="mb-1 block text-xs text-gray-600">Weißer oder Vollkornreis:</label>
          <FormInput
            id="mittag_reis"
            name="mittag_reis"
            placeholder="z.B. 3x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_getreide" class="mb-1 block text-xs text-gray-600">Anderes Getreide:</label>
          <FormInput
            id="mittag_getreide"
            name="mittag_getreide"
            placeholder="z.B. Quinoa, Hirse"
          />
        </div>

        <div>
          <label for="mittag_gemuese" class="mb-1 block text-xs text-gray-600">Gemüse:</label>
          <FormInput
            id="mittag_gemuese"
            name="mittag_gemuese"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="mittag_kaese" class="mb-1 block text-xs text-gray-600">Käsegerichte:</label>
          <FormInput
            id="mittag_kaese"
            name="mittag_kaese"
            placeholder="z.B. 1x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_eier" class="mb-1 block text-xs text-gray-600">Eiergerichte:</label>
          <FormInput
            id="mittag_eier"
            name="mittag_eier"
            placeholder="z.B. 2x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_fleisch" class="mb-1 block text-xs text-gray-600">Fleisch:</label>
          <FormInput
            id="mittag_fleisch"
            name="mittag_fleisch"
            placeholder="z.B. 3x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_fisch" class="mb-1 block text-xs text-gray-600">Fisch:</label>
          <FormInput
            id="mittag_fisch"
            name="mittag_fisch"
            placeholder="z.B. 1x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_tofu" class="mb-1 block text-xs text-gray-600">Tofu:</label>
          <FormInput
            id="mittag_tofu"
            name="mittag_tofu"
            placeholder="z.B. 2x pro Woche"
          />
        </div>

        <div>
          <label for="mittag_sonstiges" class="mb-1 block text-xs text-gray-600">Sonstiges:</label>
          <FormInput
            id="mittag_sonstiges"
            name="mittag_sonstiges"
          />
        </div>
      </div>
    </div>

    <FormInput
      id="gemuese_nicht_mogen"
      name="gemuese_nicht_mogen"
      label="Welches Gemüse magst Du gar nicht?"
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormSelect
        id="salat_wann"
        name="salat_wann"
        label="Isst Du den Salat vor oder während der Hauptmahlzeit?"
        options={salatWannOptions}
      />

      <FormInput
        id="salat_dressing"
        name="salat_dressing"
        label="Dressing: Essig & Öl, Joghurtdressing, Sahnedressing oder anderes?"
      />
    </div>

    <FormInput
      id="snack_nachmittag"
      name="snack_nachmittag"
      label="Was isst Du zwischen Mittag- und Abendessen?"
    />
  </div>
</div>

<!-- Deine aktuelle Ernährungsweise - Abendessen -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Deine aktuelle Ernährungsweise - Abendessen</h3>

  <div class="space-y-6">
    <FormInput
      id="abend_uhrzeit"
      name="abend_uhrzeit"
      label="Um welche Uhrzeit isst Du zu Abend?"
      placeholder="z.B. 18:30 Uhr"
    />

    <div>
      <label class="mb-3 block text-sm font-medium text-gray-700"> Was isst Du abends und wie oft pro Woche? </label>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        <div>
          <label for="abend_brot" class="mb-1 block text-xs text-gray-600">Brot:</label>
          <FormInput
            id="abend_brot"
            name="abend_brot"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="abend_wurst" class="mb-1 block text-xs text-gray-600">Wurst:</label>
          <FormInput
            id="abend_wurst"
            name="abend_wurst"
            placeholder="z.B. 3x pro Woche"
          />
        </div>

        <div>
          <label for="abend_kaese" class="mb-1 block text-xs text-gray-600">Käse:</label>
          <FormInput
            id="abend_kaese"
            name="abend_kaese"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="abend_salat" class="mb-1 block text-xs text-gray-600">Salat:</label>
          <FormInput
            id="abend_salat"
            name="abend_salat"
            placeholder="z.B. 2x pro Woche"
          />
        </div>

        <div>
          <label for="abend_milchprodukte" class="mb-1 block text-xs text-gray-600">Milchprodukte:</label>
          <FormInput
            id="abend_milchprodukte"
            name="abend_milchprodukte"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="abend_obst" class="mb-1 block text-xs text-gray-600">Obst:</label>
          <FormInput
            id="abend_obst"
            name="abend_obst"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="abend_kartoffeln" class="mb-1 block text-xs text-gray-600">Kartoffeln, Nudeln, Reis:</label>
          <FormInput
            id="abend_kartoffeln"
            name="abend_kartoffeln"
            placeholder="z.B. 2x pro Woche"
          />
        </div>

        <div>
          <label for="abend_fleisch" class="mb-1 block text-xs text-gray-600">Fleisch, Fisch, Tofu, Eier:</label>
          <FormInput
            id="abend_fleisch"
            name="abend_fleisch"
            placeholder="z.B. 3x pro Woche"
          />
        </div>

        <div>
          <label for="abend_gemuese" class="mb-1 block text-xs text-gray-600">Gemüse:</label>
          <FormInput
            id="abend_gemuese"
            name="abend_gemuese"
            placeholder="z.B. täglich"
          />
        </div>

        <div>
          <label for="abend_sonstiges" class="mb-1 block text-xs text-gray-600">Sonstiges:</label>
          <FormInput
            id="abend_sonstiges"
            name="abend_sonstiges"
          />
        </div>
      </div>
    </div>

    <FormInput
      id="snack_abend"
      name="snack_abend"
      label="Was isst Du zwischen dem Abendessen und dem Schlafengehen?"
    />
  </div>
</div>

<!-- Getränke -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Getränke</h3>

  <div>
    <label class="mb-3 block text-sm font-medium text-gray-700">Was und wie viel trinkst Du am Tag?</label>
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <label for="getraenk_kaffee" class="mb-1 block text-xs text-gray-600">Kaffee:</label>
        <FormInput
          id="getraenk_kaffee"
          name="getraenk_kaffee"
          placeholder="z.B. 2 Tassen"
        />
      </div>

      <div>
        <label for="getraenk_tee" class="mb-1 block text-xs text-gray-600">Tee:</label>
        <FormInput
          id="getraenk_tee"
          name="getraenk_tee"
          placeholder="z.B. 1 Liter"
        />
      </div>

      <div>
        <label for="getraenk_softdrinks" class="mb-1 block text-xs text-gray-600">Softgetränke:</label>
        <FormInput
          id="getraenk_softdrinks"
          name="getraenk_softdrinks"
          placeholder="z.B. 0,5 Liter"
        />
      </div>

      <div>
        <label for="getraenk_gesuesst" class="mb-1 block text-xs text-gray-600">Gesüßte Getränke:</label>
        <FormInput
          id="getraenk_gesuesst"
          name="getraenk_gesuesst"
          placeholder="z.B. 0,5 Liter"
        />
      </div>

      <div>
        <label for="getraenk_kohlen" class="mb-1 block text-xs text-gray-600">Kohlensäurehaltiges Wasser:</label>
        <FormInput
          id="getraenk_kohlen"
          name="getraenk_kohlen"
          placeholder="z.B. 1 Liter"
        />
      </div>

      <div>
        <label for="getraenk_still" class="mb-1 block text-xs text-gray-600">Stilles Wasser:</label>
        <FormInput
          id="getraenk_still"
          name="getraenk_still"
          placeholder="z.B. 2 Liter"
        />
      </div>

      <div>
        <label for="getraenk_leitungswasser" class="mb-1 block text-xs text-gray-600">Leitungswasser:</label>
        <FormInput
          id="getraenk_leitungswasser"
          name="getraenk_leitungswasser"
          placeholder="z.B. 1 Liter"
        />
      </div>
    </div>
  </div>
</div>

<!-- Weitere Angaben -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Weitere Angaben</h3>

  <div class="space-y-6">
    <FormTextarea
      id="zusaetzlich_mitteilen"
      name="zusaetzlich_mitteilen"
      label="Was möchtest Du mir zusätzlich mitteilen?"
      rows={3}
    />

    <FormTextarea
      id="wichtig_wissen"
      name="wichtig_wissen"
      label="Was sollte ich unbedingt noch über Dich wissen?"
      rows={3}
    />
  </div>
</div>
