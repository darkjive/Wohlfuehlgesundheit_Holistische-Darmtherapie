        <option value="">Bitte wählen</option>
        <option value="mischkost">Mischkost</option>
        <option value="vegetarisch">Vegetarisch</option>
        <option value="vegan">Vegan</option>
        <option value="rohkoestlich">Rohköstlich</option>
        <option value="sonstiges">Sonstiges</option>
      </select>
    </div>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <label for="mittagessen_selbst" class="mb-2 block text-sm font-medium text-gray-700">
          Bereitest Du Dein Mittagessen selbst zu?
        </label>
