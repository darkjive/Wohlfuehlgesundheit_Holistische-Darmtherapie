---
// Readiness.astro - Allgemeine Fragen (Bereitschaft)
// Abschnitt für Fragen zur Bereitschaft für Veränderungen und Behandlung
import CollapsibleSection from '~/components/ui/CollapsibleSection.astro';
---

<!-- Allgemeine Fragen (Bereitschaft) -->
<CollapsibleSection title="Allgemeine Fragen" isOptional={true}>
  <div class="space-y-6">
    <div>
      <label for="bereitschaft_nahrungsergaenzung" class="mb-2 block text-sm font-medium text-gray-700">
        Bist Du bereit, für eine gewisse Zeit Nahrungsergänzungsmittel und andere Präparate einzunehmen?
      </label>
      <select
        id="bereitschaft_nahrungsergaenzung"
        name="bereitschaft_nahrungsergaenzung"
        class="focus:border-primary-500 focus:ring-primary-500 block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 shadow-sm transition duration-150 focus:ring-2"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>

    <div>
      <label for="bereitschaft_investieren" class="mb-2 block text-sm font-medium text-gray-700">
        Bist Du bereit, in Dich zu investieren?
      </label>
      <select
        id="bereitschaft_investieren"
        name="bereitschaft_investieren"
        class="focus:border-primary-500 focus:ring-primary-500 block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 shadow-sm transition duration-150 focus:ring-2"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>

    <div>
      <label for="bereitschaft_lebensstil" class="mb-2 block text-sm font-medium text-gray-700">
        Bist Du bereit, Deinen Ernährungs- und Lebensstil für Deine Gesundheit anzupassen?
      </label>
      <select
        id="bereitschaft_lebensstil"
        name="bereitschaft_lebensstil"
        class="focus:border-primary-500 focus:ring-primary-500 block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 shadow-sm transition duration-150 focus:ring-2"
      >
        <option value="">Bitte wählen</option>
        <option value="ja">Ja</option>
        <option value="nein">Nein</option>
        <option value="vielleicht">Vielleicht</option>
      </select>
    </div>
  </div>
</CollapsibleSection>
