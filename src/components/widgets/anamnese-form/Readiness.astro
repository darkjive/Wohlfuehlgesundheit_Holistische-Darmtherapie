---
// Readiness.astro - Allgemeine Fragen (Bereitschaft)
// Abschnitt für Fragen zur Bereitschaft für Veränderungen und Behandlung
import FormSelect from '~/components/ui/FormSelect.astro';

const jaVielleichtOptions = [
  { value: 'ja', label: 'Ja' },
  { value: 'nein', label: 'Nein' },
  { value: 'vielleicht', label: 'Vielleicht' },
];
---

<!-- Allgemeine Fragen (Bereitschaft) -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Allgemeine Fragen</h3>

  <div class="space-y-6">
    <FormSelect
      id="bereitschaft_nahrungsergaenzung"
      name="bereitschaft_nahrungsergaenzung"
      label="Bist Du bereit, für eine gewisse Zeit Nahrungsergänzungsmittel und andere Präparate einzunehmen?"
      options={jaVielleichtOptions}
    />

    <FormSelect
      id="bereitschaft_investieren"
      name="bereitschaft_investieren"
      label="Bist Du bereit, in Dich zu investieren?"
      options={jaVielleichtOptions}
    />

    <FormSelect
      id="bereitschaft_lebensstil"
      name="bereitschaft_lebensstil"
      label="Bist Du bereit, Deinen Ernährungs- und Lebensstil für Deine Gesundheit anzupassen?"
      options={jaVielleichtOptions}
    />
  </div>
</div>
