---
// MedicalHistory.astro - Vorerkrankungen & Medikamente
// Abschnitt für Zahnsituation, Medikamente, Operationen und weitere Vorerkrankungen
import FormInput from '~/components/ui/FormInput.astro';
import FormTextarea from '~/components/ui/FormTextarea.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const jaOderNeinOptions = [
  { value: '', label: 'Bitte wählen' },
  { value: 'nein', label: 'Nein' },
  { value: 'ja', label: 'Ja' },
];
---

<!-- Deine Zahnsituation -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Deine Zahnsituation</h3>

  <div class="space-y-6">
    <FormSelect
      id="zahnfleischprobleme"
      name="zahnfleischprobleme"
      label="Hast Du Zahnfleischprobleme?"
      options={jaOderNeinOptions}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormInput
        id="amalgamfuellungen"
        name="amalgamfuellungen"
        label="Wie viele Amalgamfüllungen hast Du?"
      />

      <FormInput
        id="amalgam_entfernt"
        name="amalgam_entfernt"
        label="Wurden bereits Füllungen entfernt? Wenn ja, wie viele und wann?"
      />
    </div>

    <FormTextarea
      id="ausleitung"
      name="ausleitung"
      label="Wurde bei Dir mal eine Ausleitung durchgeführt? Wenn ja, wann und in welcher Form?"
      rows={2}
    />

    <FormInput
      id="wurzelbehandelte_zaehne"
      name="wurzelbehandelte_zaehne"
      label="Hast Du wurzelbehandelte Zähne? Wenn ja, wie viele?"
    />
  </div>
</div>

<!-- Weitere Fragen zu Deinem gesundheitlichen Zustand -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 text-xl font-semibold text-gray-900">Weitere Fragen zu Deinem gesundheitlichen Zustand</h3>

  <div class="space-y-6">
    <FormTextarea
      id="stress_aengste"
      name="stress_aengste"
      label="Leidest Du unter Stress, Ängsten oder Depressionen? Wenn ja, seit wann?"
      rows={3}
    />

    <FormTextarea
      id="pflegeprodukte"
      name="pflegeprodukte"
      label="Welche Gesichts- und Körperpflegeprodukte verwendest Du?"
      rows={2}
    />

    <FormTextarea
      id="medikamente"
      name="medikamente"
      label="Nimmst Du derzeit Medikamente ein? Wenn ja, welche, wofür und seit wann?"
      rows={3}
    />

    <FormTextarea
      id="hormone"
      name="hormone"
      label="Nimmst Du derzeit Hormone ein? (z. B. Pille, Hormontinktur, Hormonpflaster)"
      rows={2}
    />

    <FormTextarea
      id="aerztliche_behandlung"
      name="aerztliche_behandlung"
      label="Bist Du aktuell in ärztlicher Behandlung? Wenn ja, mit welcher Erkrankung?"
      rows={2}
    />

    <FormTextarea
      id="naturheilkundliche_behandlung"
      name="naturheilkundliche_behandlung"
      label="Warst Du schon einmal in naturheilkundlicher Behandlung? Wenn ja, mit welcher Erkrankung?"
      rows={2}
    />

    <FormTextarea
      id="nahrungsergaenzung"
      name="nahrungsergaenzung"
      label="Nimmst Du Nahrungsergänzungsmittel ein? Wenn ja, welche?"
      rows={2}
    />

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <FormInput
        id="rauchen"
        name="rauchen"
        label="Rauchst Du (Zigaretten, Zigarren, Pfeife)? Wenn ja, wie viel täglich?"
      />

      <FormInput
        id="alkohol"
        name="alkohol"
        label="Trinkst Du Alkohol? Wenn ja, wie oft und wie viel?"
      />
    </div>

    <FormInput
      id="sport"
      name="sport"
      label="Treibst Du Sport? Wenn ja, welche Sportart und wie oft pro Woche?"
    />

    <FormTextarea
      id="organe_entfernt"
      name="organe_entfernt"
      label="Wurden Dir bereits Organe entfernt (z. B. Gallenblase, Blinddarm, Mandeln etc.)?"
      rows={2}
    />
  </div>
</div>
