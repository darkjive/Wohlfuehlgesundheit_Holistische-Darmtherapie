---
// PersonalData.astro - Pers√∂nliche Daten Sektion
import FormInput from '~/components/ui/FormInput.astro';
---

<!-- Deine Angaben -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 flex items-center text-xl font-semibold text-gray-900">
    <svg class="text-primary-600 mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
    </svg>
    Deine Angaben
  </h3>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <FormInput
      id="vorname"
      name="vorname"
      label="Vorname"
      required
    />

    <FormInput
      id="nachname"
      name="nachname"
      label="Nachname"
      required
    />

    <div class="sm:col-span-2">
      <FormInput
        id="adresse"
        name="adresse"
        label="Adresse"
        required
      />
    </div>

    <FormInput
      id="plz"
      name="plz"
      label="PLZ"
      required
    />

    <FormInput
      id="ort"
      name="ort"
      label="Ort"
      required
    />

    <FormInput
      id="telefon"
      name="telefon"
      type="tel"
      label="Telefon"
      required
    />

    <FormInput
      id="email"
      name="email"
      type="email"
      label="E-Mail-Adresse"
      required
    />
  </div>
</div>
