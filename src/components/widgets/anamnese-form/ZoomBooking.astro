---
// ZoomBooking.astro - Zoom-Terminbuchung
// Abschnitt für die Buchung eines Zoom-Erstgesprächs
import FormInput from '~/components/ui/FormInput.astro';
import FormSelect from '~/components/ui/FormSelect.astro';

const uhrzeitOptions = [
  { value: '08:00', label: '08:00 Uhr' },
  { value: '09:00', label: '09:00 Uhr' },
  { value: '10:00', label: '10:00 Uhr' },
  { value: '11:00', label: '11:00 Uhr' },
  { value: '12:00', label: '12:00 Uhr' },
  { value: '13:00', label: '13:00 Uhr' },
  { value: '14:00', label: '14:00 Uhr' },
  { value: '15:00', label: '15:00 Uhr' },
  { value: '16:00', label: '16:00 Uhr' },
  { value: '17:00', label: '17:00 Uhr' },
  { value: '18:00', label: '18:00 Uhr' },
  { value: '19:00', label: '19:00 Uhr' },
];

const dauerOptions = [
  { value: '60', label: '60 Minuten (empfohlen)' },
  { value: '30', label: '30 Minuten' },
];
---

<!-- Zoom-Terminbuchung -->
<div class="border-b border-gray-200 pb-8">
  <h3 class="mb-6 flex items-center text-xl font-semibold text-gray-900">
    <svg class="text-primary-600 mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
    </svg>
    Zoom-Erstgespräch Termin buchen
  </h3>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <FormInput
      id="datum"
      name="datum"
      type="date"
      label="Wunschtermin (Datum)"
      helpText="Bitte wähle ein Datum in der Zukunft"
      required
    />

    <FormSelect
      id="uhrzeit"
      name="uhrzeit"
      label="Wunschzeit"
      options={uhrzeitOptions}
      required
    />

    <FormSelect
      id="dauer"
      name="dauer"
      label="Gesprächsdauer"
      options={dauerOptions}
      value="60"
      required
    />
  </div>
</div>
