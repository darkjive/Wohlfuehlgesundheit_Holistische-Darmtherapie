---
// src/components/widgets/BookingForm.astro
// Buchungsformular f√ºr Zoom-Meetings

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Online-Termin buchen",
  subtitle = "W√§hlen Sie einen passenden Zeitpunkt f√ºr Ihr pers√∂nliches Beratungsgespr√§ch"
} = Astro.props;

// Minimales Datum (heute)
const today = new Date().toISOString().split('T')[0];
---

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-lg">
  <div class="text-center mb-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-3">{title}</h2>
    <p class="text-gray-600">{subtitle}</p>
  </div>
  
  <form id="booking-form" class="space-y-6">
    <!-- Name -->
    <div>
      <label for="patientName" class="block text-sm font-medium text-gray-700 mb-2">
        Name <span class="text-red-500">*</span>
      </label>
      <input 
        type="text" 
        id="patientName"
        name="patientName" 
        required
        placeholder="Ihr vollst√§ndiger Name"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
      />
    </div>

    <!-- E-Mail -->
    <div>
      <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
        E-Mail-Adresse <span class="text-red-500">*</span>
      </label>
      <input 
        type="email" 
        id="email"
        name="email" 
        required
        placeholder="ihre.email@beispiel.de"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
      />
      <p class="mt-1 text-sm text-gray-500">
        Sie erhalten die Meeting-Details per E-Mail
      </p>
    </div>

    <!-- Telefon (Optional) -->
    <div>
      <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
        Telefonnummer (optional)
      </label>
      <input 
        type="tel" 
        id="phone"
        name="phone"
        placeholder="+49 123 456789"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
      />
    </div>

    <!-- Datum & Uhrzeit -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label for="date" class="block text-sm font-medium text-gray-700 mb-2">
          Wunschdatum <span class="text-red-500">*</span>
        </label>
        <input 
          type="date" 
          id="date"
          name="date" 
          required
          min={today}
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        />
      </div>
      <div>
        <label for="time" class="block text-sm font-medium text-gray-700 mb-2">
          Wunschuhrzeit <span class="text-red-500">*</span>
        </label>
        <input 
          type="time" 
          id="time"
          name="time" 
          required
          min="08:00"
          max="18:00"
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        />
      </div>
    </div>

    <!-- Dauer -->
    <div>
      <label for="duration" class="block text-sm font-medium text-gray-700 mb-2">
        Gespr√§chsdauer
      </label>
      <select 
        id="duration"
        name="duration"
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
      >
        <option value="30">30 Minuten - Erstgespr√§ch</option>
        <option value="60" selected>60 Minuten - Standard</option>
        <option value="90">90 Minuten - Intensiv</option>
      </select>
    </div>

    <!-- Anliegen -->
    <div>
      <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
        Ihr Anliegen / Notizen
      </label>
      <textarea 
        id="notes"
        name="notes"
        rows="4"
        placeholder="Beschreiben Sie kurz Ihr Anliegen oder besondere W√ºnsche..."
        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
      ></textarea>
    </div>

    <!-- Datenschutz -->
    <div class="flex items-start">
      <input 
        type="checkbox" 
        id="privacy"
        name="privacy"
        required
        class="mt-1 w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
      />
      <label for="privacy" class="ml-3 text-sm text-gray-600">
        Ich habe die <a href="/datenschutz" class="text-blue-600 hover:underline" target="_blank">Datenschutzerkl√§rung</a> 
        gelesen und stimme der Verarbeitung meiner Daten zu. <span class="text-red-500">*</span>
      </label>
    </div>

    <!-- Submit Button -->
    <button 
      type="submit"
      class="w-full bg-primary text-white py-4 rounded-lg hover:bg-blue-700 transition-colors font-medium text-lg shadow-md hover:shadow-lg disabled:bg-gray-400 disabled:cursor-not-allowed"
    >
      <span class="button-text">Termin verbindlich buchen</span>
      <span class="button-loader hidden">
        <svg class="animate-spin inline-block w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Wird gebucht...
      </span>
    </button>

    <p class="text-sm text-gray-500 text-center">
      <span class="text-red-500">*</span> Pflichtfelder
    </p>
  </form>

  <!-- Ergebnis Anzeige -->
  <div id="result" class="mt-6 hidden"></div>
</div>

<script>
  const form = document.getElementById('booking-form') as HTMLFormElement;
  const resultDiv = document.getElementById('result') as HTMLDivElement;
  const submitButton = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
  const buttonText = submitButton?.querySelector('.button-text') as HTMLSpanElement;
  const buttonLoader = submitButton?.querySelector('.button-loader') as HTMLSpanElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Button-Status √§ndern
    submitButton.disabled = true;
    buttonText.classList.add('hidden');
    buttonLoader.classList.remove('hidden');

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // Privacy Checkbox entfernen (nur f√ºr Validierung)
    delete data.privacy;

    try {
      const response = await fetch('/api/booking/create-meeting', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (response.ok) {
        // Erfolg
        resultDiv.className = 'mt-6 p-6 bg-green-50 border-2 border-green-200 rounded-lg animate-fadeIn';
        resultDiv.innerHTML = `
          <div class="flex items-start">
            <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="flex-1">
              <h3 class="font-bold text-green-800 text-lg mb-2">‚úì Termin erfolgreich gebucht!</h3>
              <p class="text-sm text-green-700 mb-4">
                Sie erhalten in K√ºrze eine Best√§tigungs-E-Mail mit allen Details und dem Zugangslink.
              </p>
              
              <div class="bg-white rounded-lg p-4 border border-green-200 space-y-2">
                <div class="flex justify-between items-center text-sm">
                  <span class="font-medium text-gray-700">Meeting-ID:</span>
                  <code class="bg-gray-100 px-3 py-1 rounded text-gray-800">${result.meeting.id}</code>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="font-medium text-gray-700">Passwort:</span>
                  <code class="bg-gray-100 px-3 py-1 rounded text-gray-800">${result.meeting.password}</code>
                </div>
                <div class="flex justify-between items-center text-sm">
                  <span class="font-medium text-gray-700">Start:</span>
                  <span class="text-gray-800">${new Date(result.meeting.startTime).toLocaleString('de-DE')}</span>
                </div>
              </div>

              <a 
                href="${result.meeting.joinUrl}" 
                target="_blank"
                class="inline-block mt-4 bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors font-medium text-center w-full"
              >
                üé• Zum Zoom-Meeting
              </a>

              <p class="text-xs text-green-600 mt-3 text-center">
                üí° Tipp: Speichern Sie diesen Link oder warten Sie auf die E-Mail
              </p>
            </div>
          </div>
        `;
        
        // Formular zur√ºcksetzen
        form.reset();
        
        // Zum Ergebnis scrollen
        resultDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });

      } else {
        // Fehler
        throw new Error(result.error || 'Buchung fehlgeschlagen');
      }

    } catch (error) {
      // Fehlerbehandlung
      resultDiv.className = 'mt-6 p-6 bg-red-50 border-2 border-red-200 rounded-lg animate-fadeIn';
      resultDiv.innerHTML = `
        <div class="flex items-start">
          <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="font-bold text-red-800 text-lg mb-2">‚úó Fehler bei der Buchung</h3>
            <p class="text-sm text-red-700 mb-3">
              ${error instanceof Error ? error.message : 'Ein unbekannter Fehler ist aufgetreten'}
            </p>
            <p class="text-sm text-red-600">
              Bitte versuchen Sie es erneut oder kontaktieren Sie uns direkt unter:
              <a href="mailto:kontakt@gesundheitspraxis-stefaniel.de" class="underline font-medium">
                kontakt@gesundheitspraxis-stefaniel.de
              </a>
            </p>
          </div>
        </div>
      `;
    } finally {
      // Button zur√ºcksetzen
      submitButton.disabled = false;
      buttonText.classList.remove('hidden');
      buttonLoader.classList.add('hidden');
      resultDiv.classList.remove('hidden');
    }
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out;
  }

  /* Datum/Zeit Input Styling f√ºr bessere UX */
  input[type="date"]::-webkit-calendar-picker-indicator,
  input[type="time"]::-webkit-calendar-picker-indicator {
    cursor: pointer;
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  input[type="date"]::-webkit-calendar-picker-indicator:hover,
  input[type="time"]::-webkit-calendar-picker-indicator:hover {
    opacity: 1;
  }
</style>