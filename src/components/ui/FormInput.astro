---
// FormInput.astro - Wiederverwendbare Input-Komponente f√ºr Formulare
export interface Props {
  id: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'number' | 'date' | 'time';
  label?: string;
  placeholder?: string;
  required?: boolean;
  autocomplete?: string;
  min?: string;
  max?: string;
  value?: string;
  helpText?: string;
  class?: string;
}

const {
  id,
  name,
  type = 'text',
  label,
  placeholder,
  required = false,
  autocomplete,
  min,
  max,
  value,
  helpText,
  class: customClass,
} = Astro.props;

const inputClass = customClass || 'focus:border-primary-500 focus:ring-primary-500 block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 placeholder-gray-400 shadow-sm transition duration-150 focus:ring-2';
---

<div>
  {label && (
    <label for={id} class="mb-2 block text-sm font-medium text-gray-700">
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    required={required}
    autocomplete={autocomplete}
    min={min}
    max={max}
    value={value}
    class={inputClass}
  />
  {helpText && <p class="mt-1 text-xs text-gray-500">{helpText}</p>}
</div>
