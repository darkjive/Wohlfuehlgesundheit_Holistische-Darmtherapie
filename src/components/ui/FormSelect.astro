---
// FormSelect.astro - Wiederverwendbare Select-Komponente für Formulare
export interface Props {
  id: string;
  name: string;
  label?: string;
  required?: boolean;
  options: Array<{ value: string; label: string }>;
  placeholder?: string;
  value?: string;
  class?: string;
}

const {
  id,
  name,
  label,
  required = false,
  options,
  placeholder = 'Bitte wählen',
  value,
  class: customClass,
} = Astro.props;

const selectClass = customClass || 'focus:border-primary-500 focus:ring-primary-500 block w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-900 shadow-sm transition duration-150 focus:ring-2';
---

<div>
  {label && (
    <label for={id} class="mb-2 block text-sm font-medium text-gray-700">
      {label}
      {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <select
    id={id}
    name={name}
    required={required}
    class={selectClass}
  >
    <option value="">{placeholder}</option>
    {options.map(option => (
      <option value={option.value} selected={value === option.value}>
        {option.label}
      </option>
    ))}
  </select>
</div>
