---
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import type { Widget } from '~/types';

interface Props extends Widget {
  quote?: string;
  author?: string;
}

const {
  quote = await Astro.slots.render('quote'),
  author = await Astro.slots.render('author'),
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="max-w-3xl mx-auto text-center p-6">
    <p class="text-primary p-5 dark:text-secondary font-heading text-9xl leading-[0.25rem]">â€œ</p>
    <p class="text-3xl md:text-4xl tracking-tight mb-4 italic">{quote}</p>
    <p class="text-l text-gray-500 dark:text-gray-300">({author})</p>
  </div>
</WidgetWrapper>
