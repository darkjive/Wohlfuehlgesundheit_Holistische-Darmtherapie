---
import '@fontsource-variable/noto-serif-display';
import '@fontsource-variable/quicksand';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Quicksand Variable';
    --aw-font-serif: 'Noto Serif Display Variable';
    --aw-font-heading: 'Noto Serif Display Variable';

    --aw-color-primary: rgb(42, 112, 13);
    --aw-color-secondary: rgb(42, 112, 13);
    --aw-color-accent: rgb(42, 112, 13);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(42, 112, 13);
      color: rgb(255, 255, 255);
    }
  }

  .dark {
    --aw-font-sans: 'Quicksand Variable';
    --aw-font-serif: 'Noto Serif Display Variable';
    --aw-font-heading: 'Noto Serif Display Variable';

    --aw-color-primary: rgb(255, 255, 255);
    --aw-color-secondary: rgb(42, 112, 13);
    --aw-color-accent: rgb(255, 255, 255);

    --aw-color-text-heading: rgb(255, 255, 255);
    --aw-color-text-default: rgb(255, 255, 255);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(42, 112, 13);

    ::selection {
      background-color: black;
      color: rgb(255, 255, 255);
    }
  }
</style>
