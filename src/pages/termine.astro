---
import Layout from '~/layouts/PageLayout.astro';
import BookingForm from '~/components/widgets/BookingForm.astro';
---

<Layout metadata={{ title: 'Online-Termin buchen' }}>
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-center mb-8">
        Buchen Sie Ihren Online-Termin
      </h1>
      <p class="text-center text-gray-600 mb-12">
        Wählen Sie einen passenden Zeitpunkt für Ihr persönliches Beratungsgespräch
      </p>
      <BookingForm />
    </div>
  </section>
</Layout>