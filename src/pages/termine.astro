---
import Layout from '~/layouts/PageLayout.astro';
import BookingForm from '~/components/widgets/BookingForm.astro';
---

<Layout metadata={{ title: 'Online-Termin buchen' }}>
  <section class="px-4 py-16">
    <div class="mx-auto max-w-4xl">
      <h1 class="mb-8 text-center text-4xl font-bold">Buchen Sie Ihren Online-Termin</h1>
      <p class="mb-12 text-center text-gray-600">
        Wählen Sie einen passenden Zeitpunkt für Ihr persönliches Beratungsgespräch
      </p>
      <BookingForm />
    </div>
  </section>
</Layout>
