---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Booking.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';

const metadata = {
  title: 'Anamnese - Erzähl mir von dir',
  description: 'Anamnesebogen für unseren ersten Termin - erzähl mir, was dich beschäftigt',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText
    tagline="Anamnese"
    title="Erzähl mir von dir"
    subtitle="Damit ich dich und deine Beschwerden besser verstehen kann, füll gerne diesen Bogen aus. So können wir beim ersten Termin direkt loslegen."
  />

  <ContactUs
    id="anamnese-form"
    title="Was beschäftigt dich?"
    subtitle="Je mehr du mir erzählst, desto besser kann ich dir helfen. Alles bleibt natürlich unter uns."
    inputs={[
      // Persönliche Daten
      {
        type: 'text',
        name: 'name',
        label: 'Wie heißt du?',
        autocomplete: 'name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Deine E-Mail',
        autocomplete: 'email',
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Telefon',
        placeholder: '06078 123456',
        autocomplete: 'tel',
      },
      {
        type: 'date',
        name: 'birthdate',
        label: 'Wann bist du geboren?',
      },
      {
        type: 'text',
        name: 'height',
        label: 'Wie groß bist du? (cm)',
        placeholder: '175',
      },
      {
        type: 'text',
        name: 'weight',
        label: 'Dein aktuelles Gewicht (kg)',
        placeholder: '75',
      },

      // Beschwerden
      {
        type: 'text',
        name: 'hauptbeschwerde',
        label: 'Was ist dein Hauptproblem gerade?',
        placeholder: 'Erzähl ruhig ausführlicher...',
      },

      {
        type: 'text',
        name: 'beschwerden_dauer',
        label: 'Wie lange geht das schon?',
        placeholder: 'ein paar Wochen, seit Monaten, schon ewig...',
      },

      {
        type: 'text',
        name: 'aktuelle_beschwerden',
        label: 'Welche Beschwerden hast du konkret?',
        placeholder: 'Blähungen, Verstopfung, Durchfall, Bauchschmerzen, Krämpfe...',
      },

      // Stuhlgang - lockerer formuliert
      {
        type: 'text',
        name: 'stuhlgang_frequenz',
        label: 'Wie oft gehst du aufs Klo?',
        placeholder: 'täglich, alle paar Tage, mehrmals am Tag...',
      },

      {
        type: 'text',
        name: 'stuhlgang_konsistenz',
        label: 'Wie sieht dein Stuhl aus?',
        placeholder: 'normal, zu fest, breiig, wässrig, wechselt ständig...',
      },

      // Gewicht
      {
        type: 'text',
        name: 'gewichtsverlust',
        label: 'Hast du ohne Grund abgenommen?',
        placeholder: 'Nein / Ja, ungefähr ... kg in den letzten Monaten',
      },

      // Familie
      {
        type: 'text',
        name: 'familiengeschichte',
        label: 'Hat jemand in deiner Familie Darmprobleme?',
        placeholder: 'Reizdarm, Morbus Crohn, Colitis, Darmkrebs... oder niemand',
      },

      // Unverträglichkeiten
      {
        type: 'text',
        name: 'unvertraeglichkeiten',
        label: 'Verträgst du bestimmte Sachen nicht?',
        placeholder: 'Milch, Gluten, Fruchtzucker, Histamin... oder alles okay',
      },

      // Ernährung
      {
        type: 'text',
        name: 'ernaehrungsweise',
        label: 'Wie isst du so?',
        placeholder: 'ganz normal, vegetarisch, vegan, Low Carb, chaotisch...',
      },

      {
        type: 'text',
        name: 'essgewohnheiten',
        label: 'Wie sieht dein Alltag beim Essen aus?',
        placeholder: 'regelmäßig, hastig zwischendurch, spät abends, viel unterwegs...',
      },

      // Trinken
      {
        type: 'text',
        name: 'trinkgewohnheiten',
        label: 'Was und wieviel trinkst du?',
        placeholder: 'viel Wasser, Kaffee, süße Getränke, zu wenig...',
      },

      // Medizinisches
      {
        type: 'text',
        name: 'vorerkrankungen',
        label: 'Warst du schonmal richtig krank?',
        placeholder: 'Operationen, chronische Krankheiten, oder nichts Besonderes',
      },

      {
        type: 'text',
        name: 'medikamente',
        label: 'Nimmst du irgendwelche Medikamente?',
        placeholder: 'auch Nahrungsergänzung, Schmerzmittel, Antibabypille...',
      },

      {
        type: 'text',
        name: 'antibiotika',
        label: 'Hattest du in letzter Zeit Antibiotika?',
        placeholder: 'wann und wofür, oder nein',
      },

      // Lifestyle
      {
        type: 'text',
        name: 'stress_level',
        label: 'Wie stressig ist dein Leben gerade?',
        placeholder: 'total entspannt, normal stressig, am Limit...',
      },

      {
        type: 'text',
        name: 'schlafqualitaet',
        label: 'Wie schläfst du?',
        placeholder: 'super, geht so, schlecht... wieviele Stunden?',
      },

      {
        type: 'text',
        name: 'bewegung',
        label: 'Wie viel bewegst du dich?',
        placeholder: 'täglich Sport, ab und zu, Couch-Potato...',
      },

      {
        type: 'text',
        name: 'beruf',
        label: 'Was machst du beruflich?',
        placeholder: 'Büro, körperlich, viel unterwegs, Schichtdienst...',
      },

      // Besonderheiten
      {
        type: 'text',
        name: 'auslandsreisen',
        label: 'Warst du kürzlich im Ausland?',
        placeholder: 'wo und wann, oder nein',
      },

      {
        type: 'text',
        name: 'laborwerte',
        label: 'Wurden schonmal komische Blutwerte bei dir gefunden?',
        placeholder: 'Vitaminmangel, Anämie, Leberwerte... oder alles normal',
      },

      {
        type: 'text',
        name: 'zyklus',
        label: 'Falls du eine Frau bist: Wie ist dein Zyklus?',
        placeholder: 'regelmäßig, unregelmäßig, Pille, Wechseljahre...',
      },
    ]}
    textarea={{
      label: 'Sonst noch was?',
      placeholder: 'Hier ist Platz für alles, was dir noch wichtig ist oder was ich wissen sollte...',
      rows: 6,
    }}
    disclaimer={{
      label:
        'Ich bin einverstanden, dass meine Daten vertraulich behandelt werden. Mir ist klar, dass das hier keine ärztliche Diagnose ersetzt.',
    }}
    description="Deine Angaben bleiben natürlich unter uns. Ich melde mich innerhalb von 2 Tagen bei dir zurück."
  />

  <Testimonials
    title="Das sagen andere"
    subtitle="Erfahrungen von Klienten mit ähnlichen Problemen"
    testimonials={[
      {
        testimonial: `Der Fragebogen war super ausführlich, aber nicht anstrengend. Stefanie konnte dadurch beim ersten Gespräch schon richtig in die Tiefe gehen.`,
        // name: 'Klientin',
        // job: '32 Jahre',
        // image: {
        //   alt: 'Anonymes Profilbild',
        //   src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
        // },
      },
      {
        testimonial: `Endlich mal jemand, der alles zusammen betrachtet - nicht nur den Bauch, sondern auch Stress, Schlaf und so. Das hat mir total geholfen.`,
        // name: 'Klient',
        // job: '28 Jahre',
        // image: {
        //   alt: 'Anonymes Profilbild',
        //   src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
        // },
      },
      {
        testimonial: `Ich dachte erst "oh nee, so ein langer Fragebogen", aber es war eigentlich ganz entspannt. Und Stefanie wusste dann schon so viel über mich.`,
        // name: 'Klient*in',
        // job: '41 Jahre',
        // image: {
        //   src: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
        //   alt: 'Anonymes Profilbild',
        // },
      },
      {
        testimonial: `Die Fragen waren echt durchdacht. Vieles wäre mir im Gespräch gar nicht eingefallen, aber so konnte ich alles in Ruhe durchdenken.`,
        // name: 'Klientin',
        // job: '36 Jahre',
        // image: {
        //   src: 'https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=774&q=80',
        //   alt: 'Anonymes Profilbild',
        // },
      },
    ]}
  />
</Layout>
